<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payTabLayout"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/fpi_name"
                android:textSize="18dp"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/fpiname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/money"
                android:textSize="18dp"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/cost"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/pay_button"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Pay"
                android:gravity="center"
                android:id="@+id/payButton"
                android:textColor="@android:color/white"
                android:textSize="18dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/ApprovedLay"
            android:padding="15dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="Payment done for:"
                android:textSize="18dp"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="8dp"
                android:text="CompanyName"
                android:id="@+id/ApprovedCompanyName"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>